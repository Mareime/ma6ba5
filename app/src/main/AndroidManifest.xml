<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.recettescuisine">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.RecettesCuisine">

        <!-- Activité principale -->
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Activité détail recette -->
        <activity
            android:name=".DetailRecetteActivity"
            android:parentActivityName=".MainActivity" />

        <!-- Activité favoris -->
        <activity
            android:name=".FavorisActivity"
            android:parentActivityName=".MainActivity" />

        <!-- Activité historique -->
        <activity
            android:name=".HistoriqueActivity"
            android:parentActivityName=".MainActivity" />

        <!-- Activité préférences -->
        <activity
            android:name=".PreferencesActivity"
            android:parentActivityName=".MainActivity" />

    </application>

</manifest>
